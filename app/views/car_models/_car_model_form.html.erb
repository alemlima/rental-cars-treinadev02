<%= form_with model: car_model, local: true do |f| %>
  <%= f.label :name, 'Nome'%>
  <%= f.text_field :name %>
  <%= f.label :year, 'Ano' %>
  <%= f.number_field :year %>
  <%= f.label :fuel_type, 'Combustível' %>
  <%= f.text_field :fuel_type %>
  <%= f.label :motorization, 'Motorização' %>
  <%= f.number_field :motorization %>
  <%= f.label :manufacturer_id, 'Fabricante' %>
  <%= f.collection_select(:manufacturer_id, @manufacturers,:id, :name, prompt: 'Selecione um fabricante:') %>
  <%= f.label :car_category_id, 'Categoria' %>
  <%= f.collection_select(:car_category_id, @car_categories,:id, :name, prompt: 'Selecione uma categoria:') %>
  <%= f.submit 'Enviar' %>
<% end %>