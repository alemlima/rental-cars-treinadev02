<h1>Locação:</h1>

<%= render @rental %>

<% if @rental.scheduled? %>
  <%= form_with model: @rental, url: start_rental_path, method: :post do |f| %>
    <%= f.label :car_id, 'Carro'%>
    <%= f.collection_select :car_id, @cars, :id, :description %>
    <%= f.submit 'Iniciar locação'%>
  <% end %> 
<% end %>

<%= link_to 'Voltar', root_path %>