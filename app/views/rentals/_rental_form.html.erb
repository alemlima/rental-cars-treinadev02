<% if rental.errors.any? %>
<p>Por favor, verifique os erros e tente novamente:</p>
  <ul>
    <% rental.errors.full_messages.each do |message| %>
      <li> <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: rental, local: true do |f| %>
  <%= f.label :start_date, 'Data de início' %>
  <%= f.date_field :start_date %>
  <%= f.label :end_date, 'Data de término' %>
  <%= f.date_field :end_date %>
  <%= f.label :client_id, 'Cliente' %>
  <%= f.collection_select(:client_id, @clients, :id, :name) %>
  <%= f.label :car_category_id, 'Categoria' %>
  <%= f.collection_select(:car_category_id, @car_category,:id, :name) %>
  <%= f.submit 'Enviar'%>
<%end%>